{
  "openapi": "3.0.0",
  "info": {
    "title": "Consulta API",
    "version": "1.0.0",
    "description": "API para consulta de registros de boletos"
  },
  "paths": {
    "/boletos/{type}/{bank}": {
      "get": {
        "summary": "Consultar registros de boletos",
        "description": "Retorna registros de boletos filtrados por tipo e banco, podendo aplicar filtros opcionais de tempo e status.",
        "parameters": [
          {
            "name": "type",
            "in": "path",
            "required": true,
            "description": "Tipo de requisição",
            "schema": {
              "type": "string",
              "enum": ["consulta", "registro"]
            }
          },
          {
            "name": "bank",
            "in": "path",
            "required": true,
            "description": "Código do banco ",
            "schema": {
              "type": "string",
              "enum": [
                "BANCODOBRASIL_V2",
                "SANTANDER",
                "BANRISUL",
                "INTER",
                "CAIXA",
                "ITAU_V2",
                "ITAU_FRANCESA",
                "SICREDI_V2",
                "SICREDI_V3",
                "SICOOB_V2"
              ]
            }
          },
          {
            "name": "filter",
            "in": "query",
            "required": false,
            "description": "Filtro de tempo",
            "schema": {
              "type": "string",
              "enum": ["DAY", "WEEK", "MOUTH"]
            }
          },
          {
            "name": "status",
            "in": "query",
            "required": false,
            "description": "Estado do boleto",
            "schema": {
              "type": "string",
              "enum": ["inativo", "ativo"]
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Lista de registros de boletos retornada com sucesso",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/BoletoRecord"
                  }
                }
              }
            }
          },
          "400": {
            "description": "Erro de validação nos parâmetros fornecidos"
          },
          "500": {
            "description": "Erro inesperado ao processar a solicitação"
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "BoletoRecord": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "description": "ID do registro do boleto"
          },
          "bank": {
            "type": "string",
            "description": "Código do banco"
          },
          "type": {
            "type": "string",
            "description": "Tipo de requisição"
          },
          "status": {
            "type": "string",
            "description": "Status do boleto"
          },
          "date": {
            "type": "string",
            "format": "date-time",
            "description": "Data do registro"
          }
        }
      }
    }
  }
}
